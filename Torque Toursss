    <script>
        document.getElementById("registration-form").addEventListener("submit", function(event) {
            event.preventDefault();
            
            let formData = {
                name: document.getElementById("name").value,
                email: document.getElementById("email").value,
                car: document.getElementById("car").value,
                social: document.getElementById("social").value
            };
            
            fetch("https://script.google.com/macros/s/AKfycbyvQVcvxHA1ajaiWDaiGOBbQnKJ8igZIjjY16ONXRYMtdNa9tzfq7dZuyr5vLGx6JKu/exec", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(formData)
            })
            .then(response => response.text())
            .then(data => {
                document.getElementById("response-message").innerText = "Registration submitted successfully!";
                document.getElementById("registration-form").reset();
            })
            .catch(error => {
                document.getElementById("response-message").innerText = "Error submitting registration. Please try again.";
            });
        });
    </script>
